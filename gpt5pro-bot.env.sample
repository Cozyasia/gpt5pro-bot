# ===============================
# Core (required)
# ===============================
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
PUBLIC_URL=https://your-service.onrender.com

# ===============================
# Text LLM (required for chat)
# If you use OpenRouter keys (sk-or-v1...), base_url will be set automatically
# ===============================
OPENAI_API_KEY=YOUR_OPENAI_OR_OPENROUTER_KEY
# Optional override (only if you want a custom endpoint)
# OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=openai/gpt-4o-mini
TEXT_PROVIDER=openrouter

# ===============================
# OpenAI Images (optional, only if you use image generation / background removal etc.)
# ===============================
OPENAI_IMAGE_KEY=YOUR_OPENAI_PROJECT_KEY
OPENAI_IMAGE_MODEL=gpt-image-1

# ===============================
# Runway (optional, for Runway image/video tools)
# ===============================
RUNWAY_API_KEY=YOUR_RUNWAY_KEY
RUNWAY_BASE_URL=https://api.dev.runwayml.com

# ===============================
# Luma (optional)
# ===============================
LUMA_API_KEY=YOUR_LUMA_KEY

# ===============================
# CometAPI (optional, for Kling / Sora 2 via Comet)
# IMPORTANT: variable name is COMET_API_KEY (not COMETAPI_KEY)
# ===============================
COMET_API_KEY=YOUR_COMET_KEY
COMET_BASE_URL=https://cometapi.com

# Other optional providers / features...
